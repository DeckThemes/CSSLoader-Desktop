{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build && npm run export",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "CSSLoader Desktop",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "copyFile": false,
        "createDir": false,
        "exists": true,
        "readDir": false,
        "readFile": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": [
          "$CONFIG\\Microsoft\\Windows\\Start Menu\\Programs\\Startup\\*"
        ],
        "writeFile": false
      },
      "shell": {
        "all": true,
        "execute": false,
        "open": false,
        "scope": [
          {
            "name": "killBackend",
            "cmd": "powershell.exe",
            "args": [
              "taskkill",
              "/IM",
              "CssLoader-Standalone-Headless.exe",
              "/F"
            ]
          },
          {
            "name": "downloadBackend",
            "cmd": "powershell.exe",
            "args": [
              "Invoke-WebRequest",
              "-Uri",
              "https://github.com/suchmememanyskill/SDH-CssLoader/releases/latest/download/CssLoader-Standalone-Headless.exe",
              "-OutFile",
              "([Environment]::GetFolderPath('Startup')",
              "+",
              "'\\CssLoader-Standalone-Headless.exe')"
            ]
          },
          {
            "name": "startBackend",
            "cmd": "powershell.exe",
            "args": [
              "Start-Process",
              "-FilePath",
              "([Environment]::GetFolderPath('Startup')",
              "+",
              "'\\CssLoader-Standalone-Headless.exe')"
            ]
          }
        ],
        "sidecar": false
      },
      "all": false,
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://127.0.0.1:35821/req", "https://api.deckthemes.com/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.deckthemes.cssloader",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "CSSLoader Desktop",
        "width": 800,
        "minWidth": 460,
        "minHeight": 300
      }
    ]
  }
}
